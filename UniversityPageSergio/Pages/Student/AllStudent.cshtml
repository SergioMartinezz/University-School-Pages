@page
@model UniversityPageSergio.Pages.Student.AllStudentModel
@{
    ViewData["Title"] = "AllStudent";
}

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-3">
            <p><a asp-page="/Student/AddStudent" class="btn btn-dark">Add Student</a></p>
            @{
                if(Model.Students.Count() == 0)
                {
                    <h6 class="text-danger">No students in database yet!</h6>
                }
                else
                {
                    <h3>All Students</h3>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th></th>
                            <th></th>
                        </tr>
                        @{
                            foreach(var student in Model.Students)
                            {
                                <tr>
                                    <td>@student.StudentId</td>
                                    <td>@student.StudentName</td>
                                    <td><a asp-page="EditStudent" asp-route-id="@student.StudentId" class="btn btn-warning">Edit</a></td>
                                    <td><a asp-page="DeleteStudent" asp-route-id="@student.StudentId" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }
                        }
                    </table>
                }
            }
        </div>
    </div>
</div>