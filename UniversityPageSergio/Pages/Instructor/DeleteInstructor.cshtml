@page
@model UniversityPageSergio.Pages.Instructor.DeleteInstructorModel
@{
    ViewData["Title"] = "DeleteInstructor";
}

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-3">
            <h3>Delete Instructor</h3>
            <h6>Are you sure you want to delete this instructor?</h6>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Instructor.InstructorId">ID</label>
                    <input asp-for="Instructor.InstructorId" readonly="readonly" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Instructor.InstructorName">Name</label>
                    <input asp-for="Instructor.InstructorName" readonly="readonly" class="form-control" />
                </div>
                <br />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
            <br />
            <p><a asp-page="AllInstructor">No, go back</a></p>
        </div>
    </div>
</div>
