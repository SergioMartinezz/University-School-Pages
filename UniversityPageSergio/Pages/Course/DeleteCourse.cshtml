@page
@model UniversityPageSergio.Pages.Course.DeleteCourseModel
@{
    ViewData["Title"] = "DeleteCourse";
}

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-3">
            <h3>Delete Course</h3>
            <p>Are you sure you want to delete this course?</p>
            <form method="post">
                <div class="form-group">
                    <label asp-for="course.CourseId">ID</label>
                    <input asp-for="course.CourseId" readonly="readonly" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="course.CourseTitle">Title</label>
                    <input asp-for="course.CourseTitle" readonly="readonly" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="course.SeatCapacity">Seat Capacity</label>
                    <input asp-for="course.SeatCapacity" readonly="readonly" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="course.Instructor.InstructorName">Instructor</label>
                    <input asp-for="course.Instructor.InstructorName" readonly="readonly" class="form-control" />
                </div>
                <br />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
            <br />
            <p><a asp-page="AllCourse">No, go back to Courses</a></p>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}