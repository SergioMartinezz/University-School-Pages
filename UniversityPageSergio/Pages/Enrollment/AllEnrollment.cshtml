@page
@model UniversityPageSergio.Pages.Enrollment.AllEnrollmentModel
@{
    ViewData["Title"] = "AllEnrollment";
}

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-3">
            <p><a asp-page="/Enrollment/AddEnrollment" class="btn btn-dark">Add Enrollment</a></p>
            @{
                if(Model.Enrollments.Count() == 0)
                {
                    <h6 class="text-danger">No enrollments in database yet!</h6>
                }
                else
                {
                    <h3>All Enrollments</h3>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Student</th>
                            <th>Course</th>
                            <th></th>
                            <th></th>
                        </tr>
                        @{
                            foreach(var enrollment in Model.Enrollments)
                            {
                                <tr>
                                    <td>@enrollment.Student.StudentName</td>
                                    <td>@enrollment.Course.CourseTitle</td>
                                    <td><a asp-page="EditEnrollment" asp-route-id="@enrollment.EnrollmentId" class="btn btn-warning">Edit</a></td>
                                    <td><a asp-page="DeleteEnrollment" asp-route-id="@enrollment.EnrollmentId" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }
                        }
                    </table>
                }
            }
        </div>
    </div>
</div>